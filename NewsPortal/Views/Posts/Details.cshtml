
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<div class="container-fluid populer-news py-1">
    <div class="container py-4">
        <div class="tab-class mb-4">
            <div class="row g-4">
                <div class="col-lg-8 col-xl-12">
                    <div class="d-flex flex-column flex-md-row justify-content-md-between border-bottom mb-4">
                        <h1 class="mb-4">সাম্প্রতিক খবর</h1>
                        <ul class="nav nav-pills d-inline-flex text-center">
                            <li class="nav-item mb-3">
                                
                            </li>
                        </ul>
                    </div>
                    <div class="tab-content mb-4">
                        <div id="tab-1" class="tab-pane fade show p-0 active">
                            <div class="row g-4">
                                <div class="col-lg-8">
                                    <div class="position-relative rounded overflow-hidden">
                                        <img src="@ViewBag.Image" class="img-fluid rounded w-100" alt="">
                                        <div class="position-absolute text-white px-4 py-2 bg-primary rounded" style="top: 20px; right: 20px;">
                                            @ViewBag.Category
                                        </div>
                                        
                                        <div class="d-flex justify-content-between">
                                            <small>
                                                <i class="fa fa-eye" style="font-size: 10pt; font-weight: 400">
                                                    <span style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: 10pt; font-weight: 400">@ViewBag.views views</span>
                                                </i>
                                            </small>
                                            <small class="text-body d-block">
                                                @*<i class="fas fa-calendar-alt me-1" style="font-size: 10pt; font-weight: 400">
                                                    <span style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: 10pt; font-weight: 400">@ViewBag.RecordDate.ToString("dd-MM-yyyy hh:mm:ss")</span>
                                                </i>*@
                                            </small>
                                        </div>
                                    </div>
                                    <div class="my-4">
                                        <a class="h1">@ViewBag.tit</a>
                                        <br/>
                                        <i class="fas fa-calendar-alt me-1" style="font-size: 10pt; font-weight: 400">
                                            <span style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size: 10pt; font-weight: 400">@ViewBag.RecordDate.ToString("dd-MM-yyyy hh:mm tt")</span>
                                        </i>
                                    </div>
                                    <!--<div class="d-flex justify-content-between">
                                        <a href="#" class="text-dark link-hover me-3"><i class="fa fa-clock"></i> 06 minute read</a>
                                        <a href="#" class="text-dark link-hover me-3"><i class="fa fa-eye"></i> 3.5k Views</a>
                                        <a href="#" class="text-dark link-hover me-3"><i class="fa fa-comment-dots"></i> 05 Comment</a>
                                        <a href="#" class="text-dark link-hover"><i class="fa fa-arrow-up"></i> 1.5k Share</a>
                                    </div>-->
                                    <p class="my-4" style="font-family: SutonnyOMJ">
                                        @Html.Raw(ViewBag.Description)
                                    </p>
                                </div>
                                <div class="col-lg-4">
                                    <div class="row g-4">

                                        @foreach (var item in ViewBag.rightSideNews)
                                        {
                                            <div class="col-12">
                                                <div class="row g-4 align-items-center">
                                                    <div class="col-5">
                                                        <div class="overflow-hidden rounded">
                                                            @if (@item.image != null)
                                                            {
                                                                var base64 = Convert.ToBase64String(@item.image);
                                                                var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);

                                                                <img alt="@item.image" src='@imgsrc' class="img-zoomin img-fluid rounded w-100" />
                                                            }
                                                        </div>
                                                    </div>
                                                    <div class="col-7">
                                                        <div class="features-content d-flex flex-column">
                                                            <p class="text-uppercase mb-0" style="font-size: 14pt">@item.Category.name</p>
                                                            @Html.ActionLink((string)@item.title, "Details", "Posts", new { id = @item.id }, new { @class = "h5 mb-0" })
                                                        <small class="text-body d-block" style="font-size: 9pt"><i class="fas fa-calendar-alt me-1"></i>@item.RecordDate.ToString("dd-MM-yyyy")</small>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
